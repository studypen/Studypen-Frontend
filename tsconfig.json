{
  "compilerOptions": {
    "target": "es6",
    "declaration": true,
    "emitDeclarationOnly": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@data/*": [
        "data/*"
      ],
      "@data/rest/*": [
        "data/rest/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@utils/*": [ "utils/*"],
      "@routes/*": [ "routes/*" ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}